function mainMenu(){
  currentActivity = 0;
  background(220);
  setup();
  
  submitButton.hide();
  greeting.hide();
  input.hide();
 
}
function draw() {  
  switch(currentActivity){
    case 0: 
      mainMenu();
      break;
    case 1:
      game1Setup();
      break;
      case 2:
      game2Draw();
      break;
  }
}


function randomLocation() {
  x = random(windowWidth/1.8)
  y = random(windowHeight/1.8)
  button1.position(x, y);
  //bground = [random(10), random(20)];
  score = score + 1
  //timer = 50;
}
