function switchToMM(){
  background(220);
  currentActivity = 0;
  
  // Hide the home page button, show the activity buttons
  homeButton.hide();
  game1Button.show();
  game2Button.show();
  submitButton.hide();
  greeting.hide();
  input.hide();
  button1.hide();
}
function setup() {
  createCanvas(400, 400);
  background(220);
  //image(img, 50, 60, 200, 200);
  
  game1Button = createButton('Game 1');
  game1Button.position(0, 0);
  game1Button.mousePressed(game1Setup);
  game1Button.show();
  
  game2Button = createButton('Game 2');
  game2Button.position(0, 50);
  game2Button.mousePressed(game2Setup);
  game2Button.show();
  
  homeButton = createButton('Home');
  homeButton.position(0, 100);
  homeButton.mousePressed(switchToMM);
  homeButton.show();
  
//game 1 
  input = createInput();
  input.position(20, 300)
  submitButton = createButton('submit');
 submitButton.position(input.x + input.width, 300);
  greeting = createElement('h2', 'Please type your word here');
  greeting.position(20, 315);

  textAlign(CENTER);
  textSize(50);
  submitButton.mousePressed(greet);
 submitButton.hide();
  greeting.hide();
  input.hide();

  //game 2
  button1 = createImg('https://thumbs.dreamstime.com/b/lemon-fruit-icon-isolated-white-background-flat-style-vector-illustration-76688577.jpg');
   button1.position(x, y);
  button1.size(50,50);
  button1.mousePressed(randomLocation);
 // textSize(20);
 // text(scoreText, 330, 20);
  button1.hide();
  //text.hide();
}
let button;
function game1Setup(){
  clear();
  background(220);

  console.log('in game1 here')
  background(220);
  image(img, 20, 75, 200, 200);
  currentActivity = 1;
  game1Button.show();
  game2Button.show();
  
  
  submitButton.show();
  greeting.show();
  input.show();
  button1.hide();
}
function greet() {
  const word = input.value();
  if (word === 'Apple'){
  greeting.html('Your word ' + word + 'is correct !');
  input.value('');
  }
  else if(word === 'apple'){
  greeting.html('Your word ' + word + ' is correct !');
  input.value('');   
  }
  else{
   greeting.html('Your word ' + word + ' is wrong !');
  input.value('');    
  }
}

